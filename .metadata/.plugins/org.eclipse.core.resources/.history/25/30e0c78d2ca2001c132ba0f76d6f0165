	 write();
  }

	private static void write() {
		// TODO Auto-generated method stub
		
	}

	private static void read() {
		// TODO Auto-generated method stub
		try {
			//BufferedReader br=new BufferedReader(new FileReader(new File("C:\\Users\\LENOVO\\Downloads\\virat.jpg")));
			FileInputStream fis=new FileInputStream("C:\\Users\\LENOVO\\Downloads\\virat.jpg");
			FileOutputStream fos=new FileOutputStream("C:\\Users\\LENOVO\\Documents\\virat.txt");
			int i;
			while ((i=fis.read())!=-1) {
				System.out.println((char)i);
				fos.write(i);
			} 
		}catch(Exception e){
			e.printStackTrace();
		}
	}
