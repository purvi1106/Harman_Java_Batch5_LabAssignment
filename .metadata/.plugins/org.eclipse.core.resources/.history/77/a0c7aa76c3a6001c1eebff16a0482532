package Assignment_4;

import java.util.Arrays;

public class Book {
	private int id;
	private String title;
	private String author;
	
	public Book(int id, String title, String author) {
		this.id = id;
		this.title = title;
		this.author = author;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getTitle() {
		return title;
	}

	public void setTitle(String title) {
		this.title = title;
	}

	public String getAuthor() {
		return author;
	}

	public void setAuthor(String author) {
		this.author = author;
	}

	@Override
	public String toString() {
		return "Book [id=" + id + ", title=" + title + ", author=" + author + "]";
	}
	/*
	 * public boolean hasBook(String bookname) { for(String temp:this.getArr()) {
	 * if(bookname==temp){ return true; } } return false;
	 * 
	 * } public String[] sortBooks(String[] arr) { Arrays.sort(arr); return arr; }
	 */

}
